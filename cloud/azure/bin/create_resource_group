#! /usr/bin/env bash

set -e

source "cloud/azure/bin/lib.sh"

# DOC: Create a resource group

while getopts g:l: flag
do
  case "${flag}" in
    g) RESOURCE_GROUP="${OPTARG}";;
    l) LOCATION="${OPTARG}";;
    *) out::error "Unexpected getopts value ${flag}";;
  esac
done

if [[ ! "${RESOURCE_GROUP}" ]] \
   || [[ ! "${LOCATION}" ]]; then
  out::error "arguments -g and -l must be provided"
  exit 1
fi

echo "Creating resource group ${RESOURCE_GROUP}"
azure::create_resource_group "${RESOURCE_GROUP}" "${LOCATION}"
