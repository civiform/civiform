#! /usr/bin/env bash

# DOC: Regenerate tailwind stylesheets.

source bin/lib.sh

docker run -it --rm \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v $(pwd)/universal-application-tool:/usr/src/universal-application-tool \
  --entrypoint npx \
  civiform \
  tailwindcss build \
  -i ./app/assets/stylesheets/styles.css \
  -o ./public/stylesheets/tailwind.css
