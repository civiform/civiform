#! /usr/bin/env bash

# DOC: Runs typescript tests in server/ folder.

source bin/lib.sh
docker::set_project_name_dev

bin/pull-image

# Can't use TTY in CI
interactive_flag="-it"
if [[ -n "${CI}" ]]; then
  interactive_flag=""
fi

docker run --rm $interactive_flag \
  -v "$(pwd)/server:/usr/src/server" \
  --entrypoint /bin/bash \
  civiform/civiform-dev \
  -c "npm ci && npm run test -- $*"
