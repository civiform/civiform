#! /usr/bin/env bash

# DOC: Connect to dev environment PostgreSQL database.

source bin/lib.sh

docker::set_network_name_dev

readonly COMPOSE_CMD="docker compose \
  -f docker-compose.yml \
  -f docker-compose.dev.yml"

${COMPOSE_CMD} \
  up db \
  --no-deps \
  --wait \
  -d
${COMPOSE_CMD} exec \
  -e "PGPASSWORD=example" \
  db \
  /usr/bin/psql \
  -h db \
  -U postgres
