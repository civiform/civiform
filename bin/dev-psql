#! /usr/bin/env bash

# DOC: Connect to dev environment PostgreSQL database.

source bin/lib.sh

# Find repo root name (currently civiform), also support any names for backward
# and forward compatibility.
readonly CIVIFORM_DIR="$(basename $(pwd))"

docker run --rm -it \
  -e PGPASSWORD=example \
  --network "${CIVIFORM_DIR}_default" \
  postgres:12.5 \
  /usr/bin/psql \
  -h db \
  -U postgres
