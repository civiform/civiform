#! /usr/bin/env bash

# DOC: Format Format *.sbt and project/*.scala files.

source bin/lib.sh
docker::set_project_name_dev

bin/pull-image --dev

# Can't use TTY in CI
interactive_flag="-T"
if [[ -n "${CI}" ]]; then
  interactive_flag=""
fi

docker::run_shell_container
docker::run_shell_command sbt scalafmtSbt
docker::stop_shell_container
