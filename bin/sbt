#! /usr/bin/env bash

# DOC: Open an sbt CLI in the dev environment container.

source bin/lib.sh

bin/pull-image

# Allocate a TTY for better output even though not strictly needed.
docker run -it --rm \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v $(pwd)/universal-application-tool:/usr/src/universal-application-tool \
  -v ~/.coursier:/root/.coursier \
  -v ~/.sbt:/root/.sbt \
  -v ~/.ivy:/root/.ivy2 \
  civiform-dev \
  $@
