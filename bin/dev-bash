#! /usr/bin/env bash

# DOC: Open a bash shell in the dev environment container.

source bin/lib.sh

bin/pull-image

docker run -it --rm \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -v $(pwd)/universal-application-tool-0.0.1:/usr/src/universal-application-tool-0.0.1 \
  -v ~/.coursier:/root/.coursier \
  -v ~/.sbt:/root/.sbt \
  -v ~/.ivy:/root/.ivy2 \
  --entrypoint /bin/bash \
  civiform-dev
