
{
  "title": "Application for Tree Care",
  "help_text": "Applications are ranked according to need. Completion of the Application Does Not Guarantee Service. Please fill out this application and submit online, or print and return by email or USPS to address below:\nLandscapeManagement@CharlotteNC.gov\n701 Tuckaseegee Rd., Charlotte, NC 28208. Incomplete applications will not be considered. If you need help completing the application, please call 980-259-2771.",
  "sections": [
    {
      "title": "Owner Information",
      "fields": [
        { "label": "OWNER NAME", "type": "text", "id": "owner_name" },
        { "label": "CONTACT NUMBER", "type": "text", "id": "contact_number" },
        { "label": "OWNER ADDRESS", "type": "text", "id": "owner_address" },
        { "label": "ADDITIONAL OWNER OR AUTHORIZED CONTACT NAME", "type": "text", "id": "additional_owner_name" },
        { "label": "ADDITIONAL OWNER OR AUTHORIZED CONTACT NUMBER", "type": "text", "id": "additional_owner_number" },
        { "label": "OWNER EMAIL ADDRESS", "type": "text", "id": "owner_email" }
      ]
    },
    {
      "title": "Eligibility Questions",
      "fields": [
        { "label": "Is the property located within the City limits of Charlotte?", "type": "radio", "options": ["Yes", "No"], "id": "city_limits" },
        { "label": "Has the owner lived in the unit for at least 1 year?", "type": "radio", "options": ["Yes", "No"], "id": "one_year_residency" },
        { "label": "Do you have ownership rights to the property?", "type": "radio", "options": ["Yes", "No"], "id": "ownership_rights" },
        { "label": "If Multiple Owners: will all owners agree to the terms of the program?", "type": "radio", "options": ["YES", "NO"], "id": "all_owners_agree" }
      ]
    },
    {
      "title": "Household Demographics",
      "fields": [
        { "label": "Total Number of people that live in the house", "type": "number", "id": "total_household_members" },
        { "label": "Of these, how many are: Adults over 62", "type": "number", "id": "adults_over_62" },
        { "label": "Other Adults", "type": "number", "id": "other_adults" },
        { "label": "Children (under 6)", "type": "number", "id": "children_under_6" },
        { "label": "Children (6-17)", "type": "number", "id": "children_6_17" },
        { "label": "Full time college students", "type": "number", "id": "college_students" },
        { "label": "Disabled Persons", "type": "number", "id": "disabled_persons" },
        { "label": "Veterans", "type": "number", "id": "veterans" },
        { "label": "Disabled Veterans", "type": "number", "id": "disabled_veterans" }
      ]
    },
    {
      "title": "Homeowners Insurance",
      "fields": [
        { "label": "Does the owner have Homeowners Insurance", "type": "radio", "options": ["Yes", "No"], "id": "homeowners_insurance" },
        { "label": "If no, Why?", "type": "radio", "options": ["Did not purchase insurance", "Cannot get the home insured due to the condition of the home"], "id": "no_insurance_reason" }
      ]
    },
    {
      "title": "Tree Concerns",
      "fields": [
        { "label": "Please explain your concerns regarding tree(s) on your property:", "type": "textarea", "id": "tree_concerns" }
      ]
    },
    {
      "title": "Signature",
      "fields": [
        { "label": "Owner's Signature", "type": "text", "id": "owner_signature" },
        { "label": "Date", "type": "date", "id": "owner_date" },
        { "label": "Household Member # 2", "type": "text", "id": "household_member_2_signature" },
        { "label": "Date", "type": "date", "id": "household_member_2_date" },
        { "label": "Household Member # 3", "type": "text", "id": "household_member_3_signature" },
        { "label": "Date", "type": "date", "id": "household_member_3_date" },
        { "label": "Household Member # 4", "type": "text", "id": "household_member_4_signature" },
        { "label": "Date", "type": "date", "id": "household_member_4_date" }
      ]
    },
    {
      "title": "How did you hear about the program?",
      "fields": [
        { "label": "Church (name)", "type": "text", "id": "heard_from_church" },
        { "label": "Friend (name)", "type": "text", "id": "heard_from_friend" },
        { "label": "Radio Station (name)", "type": "text", "id": "heard_from_radio" },
        { "label": "Community Center (name)", "type": "text", "id": "heard_from_community_center" },
        { "label": "TV", "type": "text", "id": "heard_from_tv" },
        { "label": "Other", "type": "text", "id": "heard_from_other" }
      ]
    },
    {
      "title": "Income Estimate",
      "type": "repeating_section",
      "fields": [
        { "label": "Name", "type": "text", "id": "name" },
        { "label": "Wages, Tips, and other compensation", "type": "text", "id": "wages_tips" },
        { "label": "Social Security Income, Retirement, or pension funds payments", "type": "text", "id": "social_security_retirement" },
        { "label": "Unemployment Benefits or Worker's Compensation", "type": "text", "id": "unemployment_workers_comp" },
        { "label": "Income from business and/or rental property, stocks, and annuities", "type": "text", "id": "business_rental_income" },
        { "label": "Alimony, Child Support", "type": "text", "id": "alimony_child_support" },
        { "label": "Welfare Payments for Rent or Utilities", "type": "text", "id": "welfare_payments" },
        { "label": "Savings /Checking Accounts", "type": "text", "id": "savings_checking" },
        { "label": "Cash gifts/stipends exceeding $200 a month, Other Income", "type": "text", "id": "cash_gifts_other_income" },
        { "label": "Total Income â€“ indicate per YEAR", "type": "text", "id": "total_income" }
      ]
    }
  ]
}
